<!DOCTYPE html>
{% load i18n %}
{% load page_nav %}

<!--[if lt IE 7 ]> <html lang="en" class="no-js ie6"> <![endif]-->
<!--[if IE 7 ]>    <html lang="en" class="no-js ie7"> <![endif]-->
<!--[if IE 8 ]>    <html lang="en" class="no-js ie8"> <![endif]-->
<!--[if IE 9 ]>    <html lang="en" class="no-js ie9"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!--> 
<html lang="en" class="no-js"> <!--<![endif]-->
<head>
	<meta charset="UTF-8">
	
	<title>
      {% if title %}
      {{ title }}
      {% else %}
      {% trans "KarajLug" %}
      {% endif %}
	</title>
	
	<meta name="description" content="KarajLug Karaj Linux users group">
	<meta name="author" content="Sameer Rahmani - Behnam Ahmad Khan Beigi">
	
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	
	<link rel="shortcut icon" href="favicon.ico">
	<link rel="apple-touch-icon" href="apple-touch-icon.png">
	
	<link rel="stylesheet" href="/statics/css/style.css?v=2">
	<script src="/statics/js/libs/modernizr-1.6.min.js"></script>
    {% block extrahead %}
    {% endblock %}
</head>
<body >
	<div id="header-container">
		<header class="wrapper">
			<h1 id="title">{% trans "KarajLug" %}</h1>
			<nav>
			  {% navigation %}
			</nav>
		</header>
	</div>
    <div class="yui3-u-1 nav">

    </div>

	<div id="main" class="wrapper">
		<aside>
			<h3>{% trans "The GNU/Linux User Group of Karaj / Iran" %}</h3>
		</aside>
		<article>
			<header >
			{% block home %}
			{% endblock %}	
			</header>
			{% block content %}
			{% endblock %}<br/><br/>
		</article>
	</div>
	<div id="footer-container">
		<footer class="wrapper">
			<h3>      {% block footer %}
      				  <p class="footer-box">
				<b>{% trans "KarajLug:" %} </b><br/>
				 {{ VERSION }} - {{ PYVERSION }} <br/> {{ DJVERSION }} <br/>  rev: {{ REV }}
				  </p>
      				  <p class="footer-box">
				 <b>{% trans "Friends:" %} </b><br/>
					<a href="http://shahbal.net">{% trans "shahbal" %}</a><br/>
					<a href="http://lxsameer.com">{% trans "lxsameer" %}</a><br/>
					<a href="http://b3hnam.com">{% trans "b3hnam" %}</a><br/>
				  </p>
      				  <p class="footer-box">
				 	<b>{% trans "Relaited websites :" %} </b><br>
					<a href="http://linux.org">{% trans "Linux" %}</a><br/>
					<a href="http://gnu.org">{% trans "GNU" %}</a><br/>
					<a href="http://fsf.org">{% trans "FSF" %}</a><br/>
						
				  </p>
				{% endblock %}
				
			</h3>
		</footer>
	</div>

	<script src="{{ MEDIA_URL}}js/libs/jquery-1.4.4.js"></script>
	<script>!window.jQuery && document.write(unescape('%3Cscript src="/statics/js/libs/jquery-1.4.4.js"%3E%3C/script%3E'))</script>
	<script src="/statics/js/script.js"></script>
	<!--[if lt IE 7 ]>
	<script src="/statics/js/libs/dd_belatedpng.js"></script>
	<script> DD_belatedPNG.fix('img, .png_bg');</script>
	<![endif]-->
</body>
</html>
